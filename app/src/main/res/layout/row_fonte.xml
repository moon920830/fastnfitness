<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="2dp"
     android:paddingBottom="2dp"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
    android:background="@color/background_even">

     <LinearLayout
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:layout_weight="35"
         android:orientation="vertical">

          <TextView
              android:id="@+id/DATE_CELL"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="top"
              android:layout_marginBottom="0dp"
              android:layout_marginTop="1dp"
              android:paddingTop="0dp"
              android:text="12/34/2016" />

          <TextView
              android:id="@+id/TIME_CELL"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="1dp"
              android:layout_marginTop="-3dp"
              android:layout_weight="30"
              android:paddingTop="0dp"
              android:text="00:00:00"
              android:textSize="10sp" />

     </LinearLayout>

     <TextView
         android:id="@+id/MACHINE_CELL"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:layout_weight="40"
         android:gravity="center|start"
         android:paddingBottom="0dp"
         android:paddingTop="0dp"
         android:maxLines="1"
         android:text="Machine" />

     <TextView
         android:id="@+id/SERIE_CELL"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:layout_weight="20"
         android:gravity="start|center"
         android:maxLines="1"
         android:text="1" />

     <TextView
         android:id="@+id/REPETITION_CELL"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:layout_weight="15"
         android:gravity="start|center"
         android:maxLines="1"
         android:text="2"
         android:textAlignment="center" />

     <TextView
         android:id="@+id/POIDS_CELL"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:layout_weight="20"
         android:gravity="start|center"
         android:maxLines="1"
         android:text="3Lbs"
         android:textAlignment="center" />

     <ImageButton
         android:id="@+id/deleteButton"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_gravity="right|center_vertical"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:elevation="0dp"
         app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />


</LinearLayout>