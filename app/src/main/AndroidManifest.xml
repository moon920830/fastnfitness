        <uses-permission android:name="android.permission.CAMERA" />
	    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.easyfitness.MainActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateUnchanged"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />                
            </intent-filter>
        </activity>
        <!-- <activity android:name="com.easyfitness.machines.MachineDetailsActivity"
                   android:configChanges="orientation|screenSize" >
        </activity> -->
        <activity android:name="com.easyfitness.intro.MainIntroActivity"
            android:theme="@style/Theme.Intro"/>


        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a119606f6a1957e5ad76859e9336d0eb4d20236b" />

        <meta-data
            android:name="firebase_crash_collection_enabled"
            android:value="@bool/FIREBASE_CRASH_ENABLED" />
